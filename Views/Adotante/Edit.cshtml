				</div>
				<div class="box-descricao">
					<label asp-for="telefone" class="control-label"></label>
					<input asp-for="telefone" class="form-control" style="width:20%" />
					<span asp-validation-for="telefone" class="text-danger"></span>
				</div>
			</div>
		</div>
	</div>
	<form class="botoes-delete container-animal" asp-action="Edit">
		<button type="submit" value="Save" class="btn btn-primary"
				style="margin:20px;border-radius:20%;width:10%; height:10%;">
			Salvar
		</button>
		<a asp-action="List">Voltar</a>
	</form>
</section>