				<div class="box-descricao">
					<label asp-for="sexo" class="control-label"></label>
					<input asp-for="sexo" class="form-control" style="width:20%"></input>
					<span asp-validation-for="sexo" class="text-danger"></span>
				</div>
				<div class="box-descricao">
					<label asp-for="talimentacao" class="control-label"></label>
					<input asp-for="talimentacao" class="form-control" style="width:20%"></input>
					<span asp-validation-for="talimentacao" class="text-danger"></span>
				</div>
				<div class="box-descricao">
					<label asp-for="nome" class="control-label"></label>
					<input asp-for="nome" class="form-control" style="width:20%" />
