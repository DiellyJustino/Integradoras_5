				</div>
				<div class="box-descricao">
					<label asp-for="porte" class="control-label"></label>
					<input asp-for="porte" class="form-control" style="width:20%"></input>
					<span asp-validation-for="porte" class="text-danger"></span>
				</div>
				<div class="box-descricao">
					<label asp-for="filhote" class="control-label"></label>
					<input asp-for="filhote" class="form-control" style="width:20%"></input>
					<span asp-validation-for="filhote" class="text-danger"></span>
				</div>
				<div class="box-descricao">
					<label asp-for="castrado" class="control-label"></label>
					<input asp-for="castrado" class="form-control" style="width:20%"></input>
					<span asp-validation-for="castrado" class="text-danger"></span>
